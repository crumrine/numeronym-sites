---
import BaseLayout from '@shared/components/BaseLayout.astro';
import SiteHeader from '@shared/components/SiteHeader.astro';
import SiteFooter from '@shared/components/SiteFooter.astro';

interface Props {
  title: string;
  date: Date;
  description: string;
  tags: string[];
  author: string;
}

const { title, date, description, tags, author } = Astro.props;

// Calculate reading time from the raw markdown content
const rawContent = await Astro.slots.render('default');
const wordCount = rawContent.replace(/<[^>]*>/g, '').split(/\s+/).filter(Boolean).length;
const readingTime = Math.max(1, Math.ceil(wordCount / 250));

const formattedDate = date.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});
---

<BaseLayout
  title={`${title} â€” p8s.dev`}
  description={description}
  site="p8s"
>
  <slot name="head" slot="head" />
  <SiteHeader site="p8s" nav={[{ label: 'Blog', href: '/blog' }, { label: 'Playground', href: '/playground' }]} />

  <main class="blog-post">
    <article class="container">
      <a href="/blog" class="back-link">&larr; Back to blog</a>

      <header class="post-header">
        <div class="post-meta">
          <time datetime={date.toISOString()}>{formattedDate}</time>
          <span class="meta-sep">&middot;</span>
          <span>{readingTime} min read</span>
        </div>
        <h1 class="post-title">{title}</h1>
        <p class="post-description">{description}</p>
        <div class="post-tags">
          {tags.map((tag) => (
            <span class="tag">#{tag}</span>
          ))}
        </div>
      </header>

      <div class="post-content prose" set:html={rawContent}>
      </div>

      <footer class="post-footer">
        <div class="byline">
          Written by {author}, built by <a href="https://claude.ai/code" target="_blank" rel="noopener">Claude Code</a>
        </div>
        <a href="/blog" class="back-link">&larr; Back to blog</a>
      </footer>
    </article>
  </main>

  <SiteFooter site="p8s" />
</BaseLayout>

<style>
  .blog-post {
    padding: var(--space-xl) 0;
  }

  .blog-post .container {
    max-width: 48rem;
  }

  .back-link {
    display: inline-block;
    font-family: var(--font-mono);
    font-size: var(--text-sm);
    color: var(--text-muted);
    margin-bottom: var(--space-lg);
    transition: color var(--transition-fast);
  }

  .back-link:hover {
    color: var(--accent);
    opacity: 1;
  }

  .post-header {
    margin-bottom: var(--space-xl);
    padding-bottom: var(--space-lg);
    border-bottom: 1px solid var(--border);
  }

  .post-meta {
    font-family: var(--font-mono);
    font-size: var(--text-sm);
    color: var(--text-muted);
    margin-bottom: var(--space-md);
    display: flex;
    align-items: center;
    gap: var(--space-sm);
  }

  .meta-sep {
    color: var(--border);
  }

  .post-title {
    font-size: var(--text-4xl);
    line-height: 1.15;
    margin-bottom: var(--space-md);
    max-width: none;
  }

  .post-description {
    font-size: var(--text-lg);
    color: var(--text-secondary);
    line-height: 1.6;
    max-width: none;
  }

  .post-tags {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-sm);
    margin-top: var(--space-md);
  }

  .tag {
    font-family: var(--font-mono);
    font-size: var(--text-xs);
    color: var(--accent);
    background: var(--accent-dim);
    padding: 0.15em 0.6em;
    border-radius: var(--radius-sm);
  }

  /* Prose styles for rendered markdown */
  .post-content {
    max-width: 42.5rem;
  }

  .post-content :global(h2) {
    font-size: var(--text-2xl);
    margin-top: var(--space-xl);
    margin-bottom: var(--space-md);
    color: var(--text-primary);
  }

  .post-content :global(h3) {
    font-size: var(--text-xl);
    margin-top: var(--space-lg);
    margin-bottom: var(--space-sm);
    color: var(--text-primary);
  }

  .post-content :global(p) {
    font-size: var(--text-base);
    line-height: 1.8;
    color: var(--text-secondary);
    margin-bottom: var(--space-md);
    max-width: none;
  }

  .post-content :global(a) {
    color: var(--accent);
    text-decoration: underline;
    text-underline-offset: 2px;
  }

  .post-content :global(a:hover) {
    opacity: 0.8;
  }

  .post-content :global(ul),
  .post-content :global(ol) {
    margin-bottom: var(--space-md);
    padding-left: var(--space-lg);
    color: var(--text-secondary);
  }

  .post-content :global(li) {
    margin-bottom: var(--space-xs);
    line-height: 1.8;
  }

  .post-content :global(blockquote) {
    border-left: 3px solid var(--accent);
    padding-left: var(--space-md);
    margin: var(--space-lg) 0;
    color: var(--text-muted);
    font-style: italic;
  }

  .post-content :global(blockquote p) {
    color: var(--text-muted);
  }

  .post-content :global(pre) {
    background: var(--bg-secondary);
    border: 1px solid var(--border);
    border-radius: var(--radius-md);
    padding: var(--space-md);
    overflow-x: auto;
    margin-bottom: var(--space-md);
    font-size: var(--text-sm);
  }

  .post-content :global(code) {
    font-family: var(--font-mono);
    font-size: 0.9em;
  }

  .post-content :global(pre code) {
    background: none;
    padding: 0;
    border-radius: 0;
  }

  .post-content :global(strong) {
    color: var(--text-primary);
    font-weight: 600;
  }

  .post-content :global(em) {
    font-style: italic;
  }

  .post-content :global(hr) {
    border: none;
    border-top: 1px solid var(--border);
    margin: var(--space-xl) 0;
  }

  .post-footer {
    margin-top: var(--space-xl);
    padding-top: var(--space-lg);
    border-top: 1px solid var(--border);
    display: flex;
    flex-direction: column;
    gap: var(--space-md);
  }

  .byline {
    font-family: var(--font-mono);
    font-size: var(--text-sm);
    color: var(--text-muted);
  }

  .byline a {
    color: var(--accent);
  }

  @media (max-width: 640px) {
    .post-title {
      font-size: var(--text-3xl);
    }

    .post-content {
      max-width: none;
    }
  }
</style>
