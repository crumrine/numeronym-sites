---
import { getCollection } from 'astro:content';
import BaseLayout from '@shared/components/BaseLayout.astro';
import SiteHeader from '@shared/components/SiteHeader.astro';
import SiteFooter from '@shared/components/SiteFooter.astro';

const posts = (await getCollection('blog'))
  .filter((post) => !post.data.draft)
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());

function getReadingTime(body: string): number {
  const words = body.split(/\s+/).filter(Boolean).length;
  return Math.max(1, Math.ceil(words / 250));
}
---

<BaseLayout
  title="Blog â€” p8s.dev"
  description="Thoughts on the death of traditional software engineering, prompt-first development, and the future of building things with AI."
  site="p8s"
>
  <SiteHeader site="p8s" nav={[{ label: 'Blog', href: '/blog' }, { label: 'Playground', href: '/playground' }]} />

  <main class="blog-index">
    <div class="container">
      <header class="blog-header fade-up">
        <h1>Blog</h1>
        <p class="blog-subtitle">
          Dispatches from the frontier of prompt-first engineering.
        </p>
      </header>

      <div class="posts-list">
        {posts.map((post, i) => {
          const readingTime = getReadingTime(post.body ?? '');
          const formattedDate = post.data.date.toLocaleDateString('en-US', {
            year: 'numeric',
            month: 'short',
            day: 'numeric',
          });
          return (
            <a href={`/blog/${post.id}`} class={`post-card fade-up fade-up-delay-${Math.min(i + 1, 4)}`}>
              <div class="post-card-meta">
                <time datetime={post.data.date.toISOString()}>{formattedDate}</time>
                <span class="meta-sep">&middot;</span>
                <span>{readingTime} min read</span>
              </div>
              <h2 class="post-card-title">{post.data.title}</h2>
              <p class="post-card-description">{post.data.description}</p>
              <div class="post-card-tags">
                {post.data.tags.map((tag) => (
                  <span class="tag">#{tag}</span>
                ))}
              </div>
            </a>
          );
        })}
      </div>
    </div>
  </main>

  <SiteFooter site="p8s" />
</BaseLayout>

<style>
  .blog-index {
    padding: var(--space-xl) 0;
  }

  .blog-index .container {
    max-width: 48rem;
  }

  .blog-header {
    margin-bottom: var(--space-xl);
  }

  .blog-header h1 {
    margin-bottom: var(--space-sm);
  }

  .blog-subtitle {
    font-size: var(--text-lg);
    color: var(--text-secondary);
  }

  .posts-list {
    display: flex;
    flex-direction: column;
    gap: var(--space-lg);
  }

  .post-card {
    display: block;
    background: var(--bg-card);
    border: 1px solid var(--border);
    border-radius: var(--radius-lg);
    padding: var(--space-lg);
    text-decoration: none;
    transition: border-color var(--transition-base), box-shadow var(--transition-base), transform var(--transition-base);
  }

  .post-card:hover {
    border-color: var(--accent);
    box-shadow: 0 0 20px var(--accent-dim), 0 0 40px var(--accent-dim);
    transform: translateY(-2px);
    opacity: 1;
  }

  .post-card-meta {
    font-family: var(--font-mono);
    font-size: var(--text-xs);
    color: var(--text-muted);
    display: flex;
    align-items: center;
    gap: var(--space-sm);
    margin-bottom: var(--space-sm);
  }

  .meta-sep {
    color: var(--border);
  }

  .post-card-title {
    font-size: var(--text-xl);
    color: var(--text-primary);
    margin-bottom: var(--space-sm);
    line-height: 1.3;
  }

  .post-card-description {
    font-size: var(--text-sm);
    color: var(--text-secondary);
    line-height: 1.6;
    margin-bottom: var(--space-sm);
    max-width: none;
  }

  .post-card-tags {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-xs);
  }

  .tag {
    font-family: var(--font-mono);
    font-size: var(--text-xs);
    color: var(--accent);
    background: var(--accent-dim);
    padding: 0.15em 0.5em;
    border-radius: var(--radius-sm);
  }

  @media (max-width: 640px) {
    .post-card-title {
      font-size: var(--text-lg);
    }
  }
</style>
